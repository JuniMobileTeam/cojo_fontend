            data-loop="false", data-dots="false", data-swipe="true",
            data-items="2", data-xs-items="3", data-sm-items="3", data-md-items="4", data-lg-items="5" data-slide-to-scroll="1")
              .item
                img.img-responsive.reveal-inline-block(src='images/product-thumbnail-01-110x110.jpg', alt='', width='110', height='110')
