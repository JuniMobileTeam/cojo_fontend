      .shell
        .range.range-xs-center
          .cell-sm-6.text-lg-left
            // Slick Carousel
            .slick-slider.carousel-parent(data-arrows="false", data-loop="false", data-dots="false", data-swipe="false", data-items="1" data-child="#child-carousel", data-for="#child-carousel")
              .item
                img.img-responsive.reveal-inline-block(src='images/product-01-502x410.jpg', alt='', width='502', height='410')
